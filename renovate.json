{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>renovatebot/.github//renovate-config.json"],
  "postUpdateOptions": ["dotnetWorkloadRestore"],
  "packageRules": [
    {
      "description": "set fix scope for prod deps",
      "matchDepNames": ["BouncyCastle.Cryptography", "dotnet-sdk"],
      "semanticCommitType": "fix"
    },
    {
      "description": "set chore scope for dev deps",
      "matchDepNames": ["org.junit.jupiter:**"],
      "semanticCommitType": "chore"
    }
  ]
}
